<div class="article">
    <div>
        <h1><%= page.title %></h1>
    </div>
    <div class="info">

        <span class="date">
            <span class="icon">
                <i class="fa-solid fa-calendar fa-fw"></i>
            </span>
            <%= date(page.date, theme.formatter.date) %>
        </span>

        <% if (page.categories && page.categories.data.length !== 0) { %>
        <span class="category">
            <a href="<%- url_for(page.categories.data[0].path) %>">
                <span class="icon">
                    <i class="fa-solid fa-bookmark fa-fw"></i>
                </span>
                <%= page.categories.data[0].name %>
            </a>
        </span>
        <% } %>

        <% if (page.tags && page.tags.data.length !== 0) { %>
        <span class="tags">
            <span class="icon">
                <i class="fa-solid fa-tags fa-fw"></i>
            </span>
            <% page.tags.data.forEach(tag => { %>
            <span class="tag">
                <%
                    const color = [
                        "color: #ffa2c4",
                        "color: #00bcd4",
                        "color: #03a9f4",
                        "color: #00a596",
                        "color: #ff7d73",
                    ];
                    let id = Math.floor(Math.random() * color.length);
                %>
                <a href="<%- url_for(tag.path) %>" style="<%- color[id] %>"><%= tag.name %></a>
            </span>
            <% }); %>
        </span>
        <% } %>
        
    </div>
    <div class="content" v-pre>
        <%- page.content %>
    </div>


    <!-- post comment -->
    <% if (page.comments) { %>
    <% if (theme.giscus.enable) { %>
    <div id="comment">
        <div id="giscus-container" class="giscus"></div>
    </div>
    <% } %>
    <% } %>
</div>
